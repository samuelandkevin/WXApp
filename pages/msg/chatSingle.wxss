.layim-chat {
    position: fixed;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    background-color: #eee;
}
.layim-chat-main {
    position: fixed;
    width: 100%;
    bottom: 45px;
    top: 0;
    left: 0;
    right: 0;
    padding: 0 8px;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-box-sizing: border-box !important;
    -moz-box-sizing: border-box !important;
    box-sizing: border-box !important;
}

li {
    list-style: none;
}
.layim-chat-user {
    position: absolute;
    left: 0px;
    display: inline-block;
    vertical-align: top;
    font-size: 14px;
}
.layim-chat-user image {
    width: 35px;
    height: 35px;
}
image {
    display: inline-block;
    border: none;
    vertical-align: middle;
}

.layim-chat-text {
    position: relative;
    max-width: calc(100% - 34px);
    min-height: 22px;
    line-height: 22px;
    margin-top: 20px;
    padding: 10px;
    background-color: #fff;
    border-radius: 5px;
    color: #333;
    word-break: break-all;
}
.layim-chat-text {
    display: inline-block;
    vertical-align: top;
    font-size: 14px;
}
.layim-chat-text:after {
    content: '';
    position: absolute;
    left: -10px;
    top: 10px;
    width: 0;
    height: 0;
    z-index: -1;
    border-style: dashed;
    border-color: transparent;
    overflow: hidden;
    border-width: 10px;
    border-top-style: solid;
    border-top-color: #fff;
}
.layim-chat-main ul .layim-chat-mine {
    text-align: right;
