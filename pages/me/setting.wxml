
<view class="page-body">
  <section class="margin-t-15">
  <view class="mui-table-view mui-table-view-chevron" wx:for="{{list}}" wx:key="*this">
        
        <view class="mui-table-view-cell mui-media">
            <view class="clickA"  bindtap='onDetail'>
                <view data-id="{{item.id}}" class="mui-media-body mui-ellipsis">
                    <p>{{item.title}}</p>
                </view>
            </view>
        </view>
        <image class="arrow"src="../../images/me/rightArrow.png"></image>
  </view>
</section>
<button class="logout"  bindtap="logout" hover-class='hover'>退出登录</button>
</view>